<!-- ripple_effect.xml -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/red" /> <!-- Default background color (red) -->
            <corners android:radius="15dp" /> <!-- Adjust radius as needed -->
        </shape>
    </item>
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightwhite" /> <!-- Ripple color (gray) -->
            <corners android:radius="15dp" /> <!-- Match the radius with the background shape -->
        </shape>
    </item>
</ripple>
